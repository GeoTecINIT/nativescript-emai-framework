<Page
        showingModally="onShowingModally"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar title="{{ content.title }}" class="action-bar"/>

    <StackLayout>
        <StackLayout class="m-8 p-x-12" visibility="{{ content.type === 'rich-text' ? 'visible' : 'collapsed' }}">
            <Label text="{{ content.body }}" textWrap="true" class="body"/>
            <Button class="btn btn-primary" text="Close" tap="closeModal"/>
        </StackLayout>
        <StackLayout class="m-8 p-x-12" visibility="{{ content.type === 'questions' ? 'visible' : 'collapsed' }}">
            <Label text="{{ content.description }}" textWrap="true" class="body"/>
            <Label text="{{ 'Q1: ' + content.questions[0].title }}" class="h2" textWrap="true"/>
            <Slider
                    value="{{ Math.round(content.questions[0].start + content.questions[0].end / 2) }}"
                    minValue="{{ content.questions[0].start }}"
                    maxValue="{{ content.questions[0].end }}"
                    loaded="onSliderLoaded" />
            <Button class="btn btn-primary" text="Submit answers" tap="submit"/>
        </StackLayout>
    </StackLayout>
</Page>
